<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@android:color/holo_green_dark"
    app:cardCornerRadius="8dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/catid2"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Event ID"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/catname"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/catid"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Category ID"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catid2" />

        <TextView
            android:id="@+id/tickets"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:text="Tickets"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/catidtxt" />

        <TextView
            android:id="@+id/catactive"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ticketstxt" />

        <TextView
            android:id="@+id/catname"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/catid2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/catidtxt"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/catid" />

        <TextView
            android:id="@+id/catcount"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ticketstxt"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tickets" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>